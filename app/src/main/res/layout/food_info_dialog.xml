<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/grad_bg"
        android:text ="  Information"
        android:textSize ="20dp"
        android:gravity="center_vertical"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="9">

        <ImageView
            android:id="@+id/ivFoodImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tvFoodNameTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/ivFoodImage"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:text="Name of Food"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvFoodName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/tvFoodNameTitle"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@id/ivFoodImage"
            android:text="name_sample"
            android:textSize="20dp" />



        <TextView
            android:id="@+id/tvCountTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-medium"
            android:layout_below="@id/tvFoodName"
            android:gravity="center_vertical"
            android:text="Count"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/tvCountTitle"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@id/ivFoodImage"
            android:text="name_sample"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/tvExpTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-medium"
            android:layout_below="@id/tvCount"
            android:gravity="center_vertical"
            android:text="Expriation date"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvExp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/tvExpTitle"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@id/ivFoodImage"
            android:text="name_sample"
            android:textSize="20dp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_below="@id/tvExp"></ScrollView>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/grad_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/okButton"
            android:text="ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="revise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/deleteButton"
            android:text="delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>