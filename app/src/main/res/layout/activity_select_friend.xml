<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectFriendActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group"
            android:textSize="30dp"
            />


        <Button

            android:id="@+id/selectFriendActivity_button_chat"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="145dp"
            android:background="@drawable/ic_chat"
            android:textSize="20dp" />

        <Button

            android:id="@+id/selectFriendActivity_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/group"
            android:textSize="20dp" />

    </LinearLayout>





    <android.support.v7.widget.RecyclerView
        android:id="@+id/selectFriendActivity_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="500dp"></android.support.v7.widget.RecyclerView>





</LinearLayout>
